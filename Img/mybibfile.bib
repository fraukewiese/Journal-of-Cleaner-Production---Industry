issn = {09596526},
journal = {Journal of Cleaner Production},
keywords = {Best available techniques (BAT),Energy efficiency,IPPC permits,Industrial activities},
pages = {1547--1558},
publisher = {Elsevier Ltd},
title = {{Overview of technologies for improving energy efficiency from energy intensive industries derived from the Italian national experience in IPPC permit licensing}},
url = {https://doi.org/10.1016/j.jclepro.2017.05.148},
volume = {168},
year = {2017}
