journal = {Applied Energy},
keywords = {Econometric modelling,Forecasting load profiles,Local areas,Long term electricity consumption},
pages = {147--162},
publisher = {Elsevier Ltd},
title = {{Long term forecasting of hourly electricity consumption in local areas in Denmark}},
volume = {110},
year = {2013}
}
