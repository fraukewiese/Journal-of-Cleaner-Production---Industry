doi = {10.1016/j.apenergy.2016.11.039},
file = {:C$\backslash$:/Users/mbal/Desktop/Projects/SDEWES2017/Literature review/Journal of cleaner production/En Eff/1-s2.0-S0306261916316245-main.pdf:pdf},
