file = {:C$\backslash$:/Users/mbal/Desktop/Projects/SDEWES2017/Literature review/Journal of cleaner production/industry/1-s2.0-S0959652615019228-main.pdf:pdf},
issn = {09596526},
journal = {Journal of Cleaner Production},
keywords = {CO2 emissions,Innovative technologies,Iron and steel industry},
pages = {84--98},
publisher = {Elsevier Ltd},
title = {{Pathways to a low-carbon iron and steel industry in the medium-term – the case of Germany}},
